/* pages/shop/list/list.wxss */
.show{
  display:block !important;
}
.hide{
  display:none !important;
}

page{
  height: 100%;
}
.page{
  height: 100%;
  width: 100%;
}
.page .tips{
  width: 100%;
  height: 50rpx;
  position: absolute;
  z-index: 999;
  display: none;
}

/* 左侧 */
.left{
  width: 180rpx;
  height: 100%;
  float: left;
	background-color: gainsboro;
  display: block;
  z-index: 99;
  position: fixed;
  font-size: 0.9em;
	margin: 0 ;
  padding: 0 ;
}
.left .txt{
  width: 100%;
  height: 60rpx;
  font-size: 1em;
  text-align: center;
  border-bottom: 1rpx solid #fff;
  padding-top: 10rpx;

}
.left .active{
  background-color: #fff !important;
  border-bottom: 1rpx solid gainsboro;
}
/* 右侧-内容 */
.content{
  width: 570rpx;
  height: 100%;
  margin-left: 180rpx;
  padding-bottom: 100rpx;
}
.content .list{
  width: 100%;
  height: 100%;
}
.goods{
  width: 100%;
  height: 180rpx;
	border-bottom: 1px solid #ddd;
}
.goods .img{
  width: 150rpx;
  height: 150rpx;
  display: block;
  float: left;
  margin: 10rpx 0px 0px 15rpx;
}
.goods .txt{
  width: 380rpx;
  height: 150rpx;
  float: left;
  margin: 10rpx 0px 0px 20rpx;
}
.goods .txt .title{
	display: block;
	font-size: 1rem;
  margin: 10rpx 0px 0px 0px;
  height: 85rpx;
}
.goods .txt .con{
  margin-top: 10rpx;
	font-size: 0.9rem;
}
.goods .txt .con .price{
  float: left;
  color: red;
	font-weight: bolder;
  height: 50rpx;
}
.goods .txt .con .cart_subtract{
  float: right;
	width: 35rpx;
  height: 35rpx;
	display: block;
  background-color: #fff;
  border-radius: 50% ;
  border: solid 1px #008842;
  text-align: center;
}
.goods .txt .con .cart_input{
  float: right;
	width: 50rpx;
  height: 50rpx;
	display: block;
  text-align: center;
}
.goods .txt .con .cart_add{
  float: right;
	width: 35rpx;
  height: 35rpx;
	display: block;
  background-color: #fff;
  border-radius: 50% ;
  border: solid 1px #008842;
  text-align: center;
  margin-right: 50rpx;
}

/* 购物车 */
.cart{
  height: 100rpx;
	display: block;
	position: fixed;
  z-index: 999;
	left: 0;
	right: 0;
	bottom: 0;
	color: #fff;
}
.cart .cart_img {
  float: left;
  color: red;
	text-align:center;
  width: 20%;
  height: 100%;
	background: rgba(0,0,0,0.6);
}
.cart .cart_img .imgs {
  width: 50px;
  height:95%;
}
.cart .cart_img .txt {
  margin-left: 8%;
  float: right;
	text-align: center;
  height: 25px;
  width: 25px;
  border-radius: 50% ;
  position: absolute;
  z-index: 10;
  font-size: 18px;
  border: 1px solid red;  
  background-color: red;
  color: #fff;
}
.cart .total {
	width:50%;
  height: 100%;
	line-height: 50px;
	float: left;
	text-align: center;
	background: rgba(0,0,0,0.6);
  font-size: 20px;
}
.cart .total .txt{
	font-weight: bolder;
  font-size: 24px;
}
.cart .payoff{
	width:30%;
	height: 100%;
	line-height: 50px;
	float: right;
	text-align: center;
	font-weight: bolder;
	background: rgba(13,250,33,0.8);
}

/* 购物车-详情 */
.cart_detail{
  width: 100%;
  height: 100%;
	position: fixed;
  z-index: 998;
	left: 0;
	right: 0;
	bottom: 0;
  margin-bottom: 50px;
  background-color: rgba(0,0,0,0.3);
}
.cart_detail .conts{
  width: 100%;
  height: 70%;
	display: block;
	position: fixed;
  z-index: 999;
	left: 0;
	right: 0;
	bottom: 0;
  background-color: #fff;
}
.cart_detail .conts .titles{
  width: 100%;
  height: 10%;
  background-color: #ddd;
}
.cart_detail .conts .titles .txt{
  width: 100%;
  padding-top: 10px;
  font-weight: 100;
}
.cart_detail .titles .txt .l{
  float: left;
  margin-left: 20px;
}
.cart_detail .titles .txt .r{
  float: right;
  margin-right: 20px;
}

.cart_detail .conts .details{
  width: 100%;
  height: 88%;
}
.cart_detail .conts .details .list{
  width: 100%;
  height: 88%;
}
.cart_detail .conts .details .detail {
  float: left;
  width: 100%;
  height: 40px;
  margin-top: 15px;
  border-bottom: 1px solid #ddd;
}
.cart_detail .conts .details .detail .title{
  width: 45%;
  float: left;
	display: block;
	font-size: 1rem;
	font-weight: bolder;
  margin: 0px 0px 0px 10px;
}
.cart_detail .conts .details .detail .price{
  width: 10%;
  float: left;
	color: red;
	font-size: 1rem;
	font-weight: bolder;
  margin: 0px 0px 0px 0px;
}
.cart_detail .conts .details .detail .cart_subtract{
  float: right;
	width: 45rpx;
  height: 45rpx;
	display: block;
  background-color: #fff;
  border-radius: 50% ;
  border: solid 1px #008842;
  text-align: center;
}
.cart_detail .conts .details .detail .cart_input{
  float: right;
	width: 33px;
  height: 26px;
	display: block;
  text-align: center;
}
.cart_detail .conts .details .detail .cart_add{
  float: right;
	width: 45rpx;
  height: 45rpx;
	display: block;
  background-color: #fff;
  border-radius: 50% ;
  border: solid 1px #008842;
  text-align: center;
  margin-right: 20rpx;
}