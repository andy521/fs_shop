/* pages/shop/cart/list.wxss */
/* 购物车 */
.cart_detail{
  width: 100%;
  height: 100%;
}
.cart_detail .conts{
  width: 100%;
  height: 100%;
}
.cart_detail .conts .titles{
  width: 100%;
  height: 8%;
  background-color: #ddd;
}
.cart_detail .conts .titles .txt{
  width: 100%;
  padding-top: 10px;
  font-weight: 100;
}
.cart_detail .titles .txt .l{
  float: left;
  margin-left: 20px;
}
.cart_detail .titles .txt .r{
  float: right;
  margin-right: 20px;
}

.cart_detail .conts .details{
  width: 100%;
  height: 88%;
}
.cart_detail .conts .details .list{
  width: 100%;
  height: 88%;
}
.cart_detail .conts .details .detail {
  float: left;
  width: 100%;
  height: 40px;
  margin-top: 15px;
  border-bottom: 1px solid #ddd;
}
.cart_detail .conts .details .detail .title{
  width: 45%;
  float: left;
	display: block;
	font-size: 1rem;
	font-weight: bolder;
  margin: 0px 0px 0px 10px;
}
.cart_detail .conts .details .detail .price{
  width: 10%;
  float: left;
	color: red;
	font-size: 1rem;
	font-weight: bolder;
  margin: 0px 0px 0px 0px;
}
.cart_detail .conts .details .detail .cart_subtract{
  float: right;
	width: 45rpx;
  height: 45rpx;
	display: block;
  background-color: #fff;
  border-radius: 50% ;
  border: solid 1px #008842;
  text-align: center;
}
.cart_detail .conts .details .detail .cart_input{
  float: right;
	width: 33px;
  height: 26px;
	display: block;
  text-align: center;
}
.cart_detail .conts .details .detail .cart_add{
  float: right;
	width: 45rpx;
  height: 45rpx;
	display: block;
  background-color: #fff;
  border-radius: 50% ;
  border: solid 1px #008842;
  text-align: center;
  margin-right: 20rpx;
}

/* 结算 */
.settle{
  height: 100rpx;
	display: block;
	position: fixed;
  z-index: 999;
	left: 0;
	right: 0;
	bottom: 0;
	color: #fff;
}
.settle .settle_img {
  float: left;
  color: red;
	text-align:center;
  width: 20%;
  height: 100%;
	background: rgba(0,0,0,0.6);
}
.settle .settle_img .imgs {
  width: 50px;
  height:95%;
}
.settle .settle_img .txt {
  margin-left: 8%;
  float: right;
	text-align: center;
  height: 25px;
  width: 25px;
  border-radius: 50% ;
  position: absolute;
  z-index: 10;
  font-size: 18px;
  border: 1px solid red;  
  background-color: red;
  color: #fff;
}
.settle .total {
	width:50%;
  height: 100%;
	line-height: 50px;
	float: left;
	text-align: center;
	background: rgba(0,0,0,0.6);
  font-size: 20px;
}
.settle .total .txt{
	font-weight: bolder;
  font-size: 24px;
}
.settle .payoff{
	width:30%;
	height: 100%;
	line-height: 50px;
	float: right;
	text-align: center;
	font-weight: bolder;
	background: rgba(13,250,33,0.8);
}