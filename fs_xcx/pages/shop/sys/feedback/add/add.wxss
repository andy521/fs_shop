/* 保存地址 */
.save{
  height: 100rpx;
	display: block;
	position: fixed;
  z-index: 999;
	left: 0;
	right: 0;
	bottom: 0;
	color: #fff;
  background-color: white;
}
.save .btn {
	width:100%;
  height: 100%;
	line-height: 100rpx;
	float: left;
	text-align: center;
	background: rgba(0,0,0,0.6);
  font-size: 1.2em;
}
