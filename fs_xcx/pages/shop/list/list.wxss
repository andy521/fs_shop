/* pages/shop/list/list.wxss */
page{
  height: 100%;
}
.list-tab{
  height: 106rpx;
  box-sizing: border-box;
  padding: 5px 10px;
}
.list-tab ul{
  display: flex;
  height: 72rpx;
  border: 1px solid #008842;
  border-radius:12rpx;
}
.list-tab li{
  flex: 1;
  display: flex;
  font-size: 14px;
  justify-content: center;
  align-items: center;
  color: #008842;
}
.list-tab .active{
  background: #008842;
  color: #ffffff;
}
/*list-box*/
.list-view{
  border-top: 1px solid #cccccc;
}


/* 列表内容 */
.content{
	background-color: #fff;
  padding-bottom: 50px;
}
.goods{
  width: 100%;
  height: 115px;
	border-bottom: 1px solid #ddd;
}
.goods .img{
  width: 100px;
  height: 100px;
  display: block;
  float: left;
  margin: 10px 0px 0px 15px;
}
.goods .text{
  float: left;
  margin-top: 10px;
  margin: 25px 0px 0px 15px;
}
.goods .title{
	display: block;
	font-size: 1rem;
	font-weight: bolder;
  margin: 10px 0px 0px 0px;
}
.goods .price{
	color: red;
	font-size: 1rem;
	font-weight: bolder;
  margin: 5px 0px 0px 10px;
}
.goods .cart_subtract{
  float: right;
	width: 22px;
  height:22px;
	display: block;
  background-color: #fff;
  border-radius: 50% ;
  border: solid 1px #008842;
  text-align: center;
  margin:40px 5px 0px 0px; 
}
.goods .cart_input{
  float: right;
	width: 33px;
  height: 26px;
	display: block;
  text-align: center;
  padding-top: 4px;
  margin:38px 5px 0px 0px; 
}
.goods .cart_add{
  float: right;
	width: 22px;
  height:22px;
	display: block;
  background-color: #fff;
  border-radius: 50% ;
  border: solid 1px #008842;
  text-align: center;
  margin:40px 10px 0px 0px; 
}
/* 购物车 */
.cart{
  height: 50px;
	display: block;
	position: fixed;
  z-index: 999;
	left: 0;
	right: 0;
	bottom: 0;
	color: #fff;
}
.cart .cart_img {
  float: left;
  color: red;
	text-align:center;
  width: 20%;
  height: 100%;
	background: rgba(0,0,0,0.6);
}
.cart .cart_img .imgs {
  width: 50px;
  height:95%;
}
.cart .cart_img .txt {
  margin-left: 8%;
  float: right;
	text-align: center;
  height: 25px;
  width: 25px;
  border-radius: 50% ;
  position: absolute;
  z-index: 10;
  font-size: 18px;
  border: 1px solid red;  
  background-color: red;
  color: #fff;
}
.cart .total {
	width:50%;
  height: 100%;
	line-height: 50px;
	float: left;
	text-align: center;
	background: rgba(0,0,0,0.6);
  font-size: 20px;
}
.cart .total .txt{
	font-weight: bolder;
  font-size: 24px;
}
.cart .payoff{
	width:30%;
	height: 100%;
	line-height: 50px;
	float: right;
	text-align: center;
	font-weight: bolder;
	background: rgba(13,250,33,0.8);
}
/* 购物车-详情 */
.show{
  display:block;
}
.hide{
  display:none;
}
.cart_detail{
  width: 100%;
  height: 100%;
	position: fixed;
	left: 0;
	right: 0;
	bottom: 0;
  margin-bottom: 50px;
  background-color: rgba(0,0,0,0.3);
}
.cart_detail .content{
  width: 100%;
  height: 70%;
	display: block;
	position: fixed;
	left: 0;
	right: 0;
	bottom: 0;
  background-color: #fff;
}
.cart_detail .content .titles{
  width: 100%;
  height: 10%;
  background-color: #ddd;
}
.cart_detail .content .titles .txt{
  width: 100%;
  padding-top: 10px;
  font-weight: 100;
}
.cart_detail .titles .txt .l{
  float: left;
  margin-left: 20px;
}
.cart_detail .titles .txt .r{
  float: right;
  margin-right: 20px;
}

.cart_detail .content .details{
  width: 100%;
  height: 88%;
}
.cart_detail .content .details .list{
  width: 100%;
  height: 88%;
}
.cart_detail .content .details .detail {
  float: left;
  width: 100%;
  height: 40px;
  margin-top: 15px;
  border-bottom: 1px solid #ddd;
}
.cart_detail .content .details .detail .title{
  width: 45%;
  float: left;
	display: block;
	font-size: 1rem;
	font-weight: bolder;
  margin: 0px 0px 0px 10px;
}
.cart_detail .content .details .detail .price{
  width: 10%;
  float: left;
	color: red;
	font-size: 1rem;
	font-weight: bolder;
  margin: 0px 0px 0px 0px;
}
.cart_detail .content .details .detail .cart_subtract{
  float: right;
	width: 22px;
  height:22px;
	display: block;
  background-color: #fff;
  border-radius: 50% ;
  border: solid 1px #008842;
  text-align: center;
}
.cart_detail .content .details .detail .cart_input{
  float: right;
	width: 33px;
  height: 26px;
	display: block;
  text-align: center;
}
.cart_detail .content .details .detail .cart_add{
  float: right;
	width: 22px;
  height:22px;
	display: block;
  background-color: #fff;
  border-radius: 50% ;
  border: solid 1px #008842;
  text-align: center;
}