/**index.wxss**/
page{
    height: 100%;
}
/* 顶部定位地址信息 */
.map_top{
  background-color: azure;
  height: 75rpx;
  width: 100%;
  padding-top: 5rpx;
}
.map_top .txt{
  margin: 5rpx 0rpx 0rpx -30rpx;
}
.map_top .img{
  float: left;
  height: 65rpx;
  width: 65rpx;
  margin: 0rpx 0rpx 0rpx 10rpx;
}

/*导航*/
.swiper-box {
    height:375rpx;
}
.slide-image{
    display: block;
    height: 375rpx;
    width:100%
}

/* 功能菜单 */
.menu-box {
    height:170rpx;
}
.menu_v{
  float: left;
  display: block;
  height: 100%;
  width:25%;
}
.menu_v .img{
  height: 100rpx;
  width:100rpx;
  border-radius: 50% ;
  border: solid 1px #008842;
  margin:10rpx 0rpx 0rpx 35rpx;
}
.menu_v .txt{
  width: 100%;
  float: left;
  text-align: center;
}

/* 附加菜单 */
.extra_menu{
  display: block;
  margin-top: 50rpx;
  width: 100%;
  height: 450rpx;
}
.extra_menu .extra_menu_box{
  height: 200rpx;
  width: 45%;
  margin: 10rpx 0rpx 0rpx 20rpx;
  float: left;
  border: 1px darkgrey solid;
}
.extra_menu .extra_menu_box .em_img{
  width: 45%;
  height: 200rpx;
  float: right;
}
.extra_menu .extra_menu_box .em_txt{
  width: 55%;
  height: 200rpx;
  float: left;
  text-align: center;
  margin-top:10rpx;
}
.extra_menu .extra_menu_box .em_txt .em_txt_0{
  width: 100%;
  font-size: 1.2em;
  font-weight: bold;
  font-family: KaiTi;
}
.extra_menu .extra_menu_box .em_txt .em_txt_1{
  width: 100%;
  font-size: 0.8em;
  color: lightslategrey;
}

.foot{
  margin-top: 20rpx;
  width: 100%;
}
.foot .foot_0{
  width: 100%;
  margin-top: 30rpx;
}
.foot .foot_0 .foot_0_img{
  width: 100%;
  height: 350rpx;
}