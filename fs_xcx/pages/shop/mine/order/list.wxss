/* pages/shop/mine/order/list.wxss */
.content{
  height: 100%;
  width: 100%;
  padding-bottom: 50px;
}
.content .title{
  width: 100%;
  height: 60rpx;
  margin-top: 10rpx;
  border-bottom: 1px solid gainsboro;
}
.content .title .tit{
  float: left;
  text-align: center;
}
.content .detail{
  width: 45%;
}
.content .amount{
  width: 20%;
}
.content .status{
  width: 15%;
}
.content .opera{
  width: 20%;
}
.list{
  height: 100%;
  width: 100%;
}
.list .order{
  width: 100%;
  height: 100rpx;
  border-bottom: 1px solid gainsboro;
  padding: 20rpx 0rpx 0rpx 0rpx;
  color: #666;
}
.list .order .li{
  float: left;
  text-align: center;
}
.list .order .details{
  font-size: 0.8em;
}
.list .order .statusDis{
  font-size: 0.8em;
  color: dodgerblue;
}


  