/* pages/shop/mine/address/address.wxss */
.content{
  height: 100%;
  width: 100%;
  padding-bottom: 50px;
}
.list{
  height: 100%;
  width: 100%;
}
.list .address{
  height: 70px;
  width: 100%;
  border-bottom: 1px solid gainsboro;
  padding: 10px 0px 10px 0px;
}
.list .address .circle_l{
  float: left;
  margin: 15px 10px 10px 10px;
}
.list .address .address_0{
  float: left;
  width: 65%;
  height: 50px;
}
.list .address .address_1{
  float: left;
  width: 65%;
}
.list .address .img_r{
  width: 35px;
  height: 35px;
  float: right;
  margin: 8px 10px 0px 0px;
}

/* 新增地址 */
.new{
  height: 50px;
	display: block;
	position: fixed;
  z-index: 999;
	left: 0;
	right: 0;
	bottom: 0;
	color: #fff;
  background-color: white;
}
.new .add {
	width:100%;
  height: 100%;
	line-height: 50px;
	float: left;
	text-align: center;
	background: rgba(0,0,0,0.6);
  font-size: 20px;
}
